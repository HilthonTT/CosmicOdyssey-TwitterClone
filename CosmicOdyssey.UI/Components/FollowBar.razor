@inject IProfileData ProfileData
@inject NavigationManager Navigation

@if (profiles?.Any() is true)
{
    <div class="px-6 py-4 hidden lg:block">
        <div class="bg-neutral-800 rounded-xl p-3">
            <h2 class="text-white text-xl font-semibold">Who to follow</h2>
            <div class="flex flex-col gap-6">
                <Virtualize Items="profiles" Context="profile" OverscanCount="5">
                    <div class="flex flex-row gap-4">
                        <Avatar Profile="profile" ForceLoad/>
                        <div class="flex flex-col">
                            <p class="text-white font-semibold text-sm">
                                @profile.FirstName @profile.LastName
                            </p>
                            <p class="text-neutral-400 text-sm">
                                @@@profile.DisplayName
                            </p>
                        </div>
                    </div>
                </Virtualize>
            </div>
        </div>
    </div>
}

@code {
    private List<ProfileModel> profiles;

    protected override async Task OnInitializedAsync()
    {
        profiles = await ProfileData.GetAllProfilesAsync();
    }
}
