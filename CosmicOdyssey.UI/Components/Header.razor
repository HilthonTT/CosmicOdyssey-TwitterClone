@inject NavigationManager Navigation

<div class="border-b-[1px] border-neutral-800 p-4">
    <div class="flex flex-row items-center gap-2">
        @if (ShowBackArrow)
        {
            <MudIcon @onclick="HandleBack" 
                Icon="@Icons.Material.Filled.ArrowBack"
                Size="Size.Large" 
                Class="text-white cursor-pointer hover:opacity-70 transition"/>
        }
        <h1 class="text-white text-xl font-semibold">@Label</h1>
    </div>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public string Label { get; set; }

    [Parameter]
    public bool ShowBackArrow { get; set; }

    private void HandleBack()
    {
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }
}
